### the bare minimum
#ctrl-shift-p to run swagger
openapi: 3.0.1
info:
    title: Conference API
    version: ""
paths:
    "/":
        get:
            responses:
                '2XX':
                    description: Success
                    content:
                        application/vnd.oai.openapi: {}
    "/topics":
        get:
            responses:
                "2XX":
                    description: Success
                "4XX":
                    description: You failed
                "5XX":
                    description: Sorry, I failed
    "/topic/{id}":
        get:
            parameters:
                - name: id
                    in: path
                    required: true
                    schema:
                        type: integer
            
            responses:
                "2XX":
                    description: ""
                    links:
                        sessionsByTopic:
                            operationRef: "/sessions"
                            parameter:
                                topicId:
                "5XX":
                    $ref: "#/component/responses/errorResponse"
    "/sessions":
        get:
            parameter:
                - name:
                in: query
                required: False
                schema:
                    type: integer
            responses:
                "2XX":
                 "description: ""


